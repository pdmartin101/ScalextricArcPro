<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:ScalextricBleMonitor.ViewModels"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="500"
        x:Class="ScalextricBleMonitor.Views.GhostControlWindow"
        x:DataType="vm:MainViewModel"
        Title="Ghost Control"
        Width="400" Height="500"
        MinWidth="350" MinHeight="300"
        WindowStartupLocation="CenterOwner">

    <Design.DataContext>
        <vm:MainViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*,Auto" Margin="15">
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Ghost Car Control"
                       FontSize="18"
                       FontWeight="SemiBold"/>
            <TextBlock Text="Fine-tune ghost car power levels"
                       FontSize="12"
                       Foreground="Gray"/>
        </StackPanel>

        <!-- Ghost Slots List -->
        <ScrollViewer Grid.Row="1">
            <ItemsControl ItemsSource="{Binding Controllers}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="vm:ControllerViewModel">
                        <!-- Only show if in ghost mode -->
                        <Border Background="#F5F5F5"
                                CornerRadius="8"
                                Padding="15"
                                Margin="0,0,0,10"
                                IsVisible="{Binding IsGhostMode}">
                            <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto">
                                <!-- Slot Header -->
                                <StackPanel Grid.Row="0"
                                            Orientation="Horizontal"
                                            Margin="0,0,0,10">
                                    <TextBlock Text="{Binding SlotNumber, StringFormat='Slot {0}'}"
                                               FontSize="16"
                                               FontWeight="Bold"/>
                                    <TextBlock Text=" - Ghost Mode Active"
                                               FontSize="14"
                                               Foreground="#4CAF50"/>
                                </StackPanel>

                                <!-- Ghost Source Selection -->
                                <StackPanel Grid.Row="1"
                                            Orientation="Horizontal"
                                            Margin="0,0,0,10">
                                    <TextBlock Text="Source:"
                                               VerticalAlignment="Center"
                                               FontSize="12"
                                               Width="50"/>
                                    <ComboBox ItemsSource="{x:Static vm:ControllerViewModel.AvailableGhostSources}"
                                              SelectedItem="{Binding GhostSource}"
                                              MinWidth="140"
                                              ToolTip.Tip="Fixed Speed uses constant throttle; Recorded Lap replays a recorded lap"/>
                                </StackPanel>

                                <!-- Fixed Speed Controls - visible when GhostSource is FixedSpeed -->
                                <StackPanel Grid.Row="2"
                                            IsVisible="{Binding IsFixedSpeedSource}"
                                            Margin="0,5,0,0">
                                    <TextBlock Text="Fixed Speed Controls"
                                               FontSize="11"
                                               Foreground="#666666"
                                               Margin="0,0,0,8"/>
                                    <Grid ColumnDefinitions="Auto,*,Auto,Auto">
                                        <Button Grid.Column="0"
                                                Content="-"
                                                Command="{Binding DecrementGhostThrottleCommand}"
                                                Width="40"
                                                Height="40"
                                                FontSize="18"
                                                FontWeight="Bold"/>
                                        <Slider Grid.Column="1"
                                                Minimum="0"
                                                Maximum="63"
                                                Value="{Binding GhostThrottleLevel}"
                                                Margin="10,0"
                                                VerticalAlignment="Center"/>
                                        <Button Grid.Column="2"
                                                Content="+"
                                                Command="{Binding IncrementGhostThrottleCommand}"
                                                Width="40"
                                                Height="40"
                                                FontSize="18"
                                                FontWeight="Bold"/>
                                        <TextBlock Grid.Column="3"
                                                   Text="{Binding GhostThrottleLevel}"
                                                   FontSize="24"
                                                   FontWeight="Bold"
                                                   Width="50"
                                                   TextAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Foreground="#0096FF"/>
                                    </Grid>
                                </StackPanel>

                                <!-- Recorded Lap Controls - visible when GhostSource is RecordedLap -->
                                <StackPanel Grid.Row="3"
                                            IsVisible="{Binding IsRecordedLapSource}"
                                            Margin="0,5,0,0">
                                    <TextBlock Text="Recorded Lap Controls"
                                               FontSize="11"
                                               Foreground="#666666"
                                               Margin="0,0,0,8"/>

                                    <!-- Lap Selection -->
                                    <Grid ColumnDefinitions="Auto,*" Margin="0,0,0,10">
                                        <TextBlock Grid.Column="0"
                                                   Text="Lap:"
                                                   VerticalAlignment="Center"
                                                   FontSize="12"
                                                   Width="35"/>
                                        <ComboBox Grid.Column="1"
                                                  ItemsSource="{Binding AvailableRecordedLaps}"
                                                  SelectedItem="{Binding SelectedRecordedLap}"
                                                  MinWidth="200"
                                                  ToolTip.Tip="Select a recorded lap to replay">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding DisplayName}"/>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                    </Grid>

                                    <!-- Laps to Record and Record Button -->
                                    <Grid ColumnDefinitions="Auto,Auto,*" Margin="0,0,0,5">
                                        <StackPanel Grid.Column="0"
                                                    Orientation="Horizontal"
                                                    Margin="0,0,15,0">
                                            <TextBlock Text="Record"
                                                       VerticalAlignment="Center"
                                                       FontSize="12"
                                                       Margin="0,0,5,0"/>
                                            <ComboBox ItemsSource="{x:Static vm:ControllerViewModel.AvailableLapCounts}"
                                                      SelectedItem="{Binding LapsToRecord}"
                                                      MinWidth="50"
                                                      IsEnabled="{Binding !IsRecording}"
                                                      ToolTip.Tip="Number of laps to record (best will be auto-selected)"/>
                                            <TextBlock Text="lap(s)"
                                                       VerticalAlignment="Center"
                                                       FontSize="12"
                                                       Margin="5,0,0,0"/>
                                        </StackPanel>
                                        <Button Grid.Column="1"
                                                Content="{Binding RecordButtonText}"
                                                Command="{Binding ToggleRecordingCommand}"
                                                Padding="15,8"
                                                FontSize="12"
                                                FontWeight="Bold"
                                                ToolTip.Tip="Record laps - the best (fastest) lap will be auto-selected"/>
                                    </Grid>

                                    <!-- Recording status -->
                                    <TextBlock Text="{Binding RecordingStatusText}"
                                               FontSize="11"
                                               Foreground="#E53935"
                                               FontStyle="Italic"
                                               Margin="0,5,0,0"
                                               IsVisible="{Binding IsRecording}"
                                               ToolTip.Tip="Cross the finish line to start recording, then complete the full lap"/>

                                    <!-- No laps hint -->
                                    <TextBlock Text="No recorded laps yet. Press Record and drive a lap!"
                                               FontSize="11"
                                               Foreground="#999999"
                                               FontStyle="Italic"
                                               Margin="0,5,0,0"
                                               IsVisible="{Binding !AvailableRecordedLaps.Count}"/>
                                </StackPanel>

                                <!-- Throttle Profile -->
                                <StackPanel Grid.Row="4"
                                            Orientation="Horizontal"
                                            Margin="0,15,0,0">
                                    <TextBlock Text="Profile:"
                                               VerticalAlignment="Center"
                                               FontSize="12"
                                               Width="50"/>
                                    <ComboBox ItemsSource="{x:Static vm:ControllerViewModel.AvailableProfiles}"
                                              SelectedItem="{Binding ThrottleProfile}"
                                              MinWidth="120"
                                              ToolTip.Tip="Throttle response curve (applied on next power enable)"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Placeholder when no ghost slots -->
        <StackPanel Grid.Row="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    IsVisible="{Binding !HasAnyGhostMode}">
            <TextBlock Text="No Ghost Cars Active"
                       FontSize="16"
                       Foreground="Gray"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Enable ghost mode (G button) for a slot in the main window"
                       FontSize="12"
                       Foreground="#AAAAAA"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="0,8,0,0"/>
        </StackPanel>

        <!-- Footer hint -->
        <TextBlock Grid.Row="2"
                   Text="Tip: Changes take effect immediately on running ghost cars"
                   FontSize="11"
                   Foreground="Gray"
                   Margin="0,10,0,0"/>
    </Grid>
</Window>
