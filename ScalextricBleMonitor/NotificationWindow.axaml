<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:ScalextricBleMonitor.ViewModels"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="400"
        x:Class="ScalextricBleMonitor.NotificationWindow"
        x:DataType="vm:MainViewModel"
        Title="Live Notification Data"
        Width="650" Height="450"
        MinWidth="400" MinHeight="300"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="15" Margin="0,0,0,10">
            <TextBlock Text="Live Notification Data"
                       FontSize="16"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"/>
            <TextBlock Text="{Binding NotificationLog.Count, StringFormat='({0} entries)'}"
                       FontSize="12"
                       Foreground="Gray"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Notification Log -->
        <Border Grid.Row="1"
                Background="#FAFAFA"
                CornerRadius="8"
                Padding="10">
            <Panel>
                <!-- Notification Log List -->
                <ListBox ItemsSource="{Binding NotificationLog}"
                         IsVisible="{Binding IsGattConnected}"
                         Background="Transparent"
                         BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate x:DataType="vm:NotificationDataViewModel">
                            <Grid ColumnDefinitions="90,*,Auto" Margin="0,2">
                                <TextBlock Grid.Column="0"
                                           Text="{Binding TimestampText}"
                                           FontFamily="Consolas"
                                           FontSize="11"
                                           Foreground="#666666"/>
                                <TextBlock Grid.Column="1"
                                           Text="{Binding HexData}"
                                           FontFamily="Consolas"
                                           FontSize="11"
                                           Foreground="#333333"
                                           Margin="10,0"/>
                                <TextBlock Grid.Column="2"
                                           Text="{Binding DecodedData}"
                                           FontFamily="Consolas"
                                           FontSize="11"
                                           Foreground="#0096FF"
                                           FontWeight="SemiBold"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Placeholder when not connected -->
                <StackPanel IsVisible="{Binding !IsGattConnected}"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Spacing="10">
                    <TextBlock Text="No GATT Connection"
                               FontSize="14"
                               Foreground="Gray"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Notification data will stream here when connected"
                               FontSize="12"
                               Foreground="#AAAAAA"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Panel>
        </Border>

        <!-- Footer with Clear button -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Clear Log"
                    Click="OnClearLogClick"
                    Padding="15,8"/>
        </StackPanel>
    </Grid>
</Window>
