<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:ScalextricBleMonitor.ViewModels"
        mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="600"
        x:Class="ScalextricBleMonitor.MainWindow"
        x:DataType="vm:MainViewModel"
        Title="Scalextric ARC Pro BLE Monitor"
        Width="900" Height="600"
        MinWidth="700" MinHeight="500"
        WindowStartupLocation="CenterScreen">

    <Design.DataContext>
        <vm:MainViewModel />
    </Design.DataContext>

    <Grid ColumnDefinitions="250,*" Margin="15">

        <!-- Left Panel: Connection Status -->
        <Border Grid.Column="0"
                Background="#FAFAFA"
                CornerRadius="8"
                Padding="15"
                Margin="0,0,10,0">
            <StackPanel Spacing="15">

                <!-- Title -->
                <TextBlock Text="Scalextric ARC Pro"
                           FontSize="18"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="BLE Monitor"
                           FontSize="14"
                           Foreground="Gray"
                           HorizontalAlignment="Center"
                           Margin="0,-10,0,10"/>

                <!-- Status circle -->
                <Ellipse Width="120" Height="120"
                         Fill="{Binding StatusIndicatorBrush}"
                         HorizontalAlignment="Center">
                    <Ellipse.Effect>
                        <DropShadowEffect BlurRadius="15"
                                          Opacity="0.3"
                                          OffsetX="0"
                                          OffsetY="3"/>
                    </Ellipse.Effect>
                </Ellipse>

                <!-- Connection status text -->
                <TextBlock Text="{Binding ConnectionStatusText}"
                           Foreground="{Binding StatusTextBrush}"
                           FontSize="20"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"/>

                <!-- Device name -->
                <TextBlock Text="{Binding DeviceName}"
                           FontSize="12"
                           Foreground="Gray"
                           HorizontalAlignment="Center"
                           IsVisible="{Binding IsConnected}"/>

                <!-- Status message -->
                <Border Background="#F0F0F0"
                        CornerRadius="5"
                        Padding="10"
                        Margin="0,10,0,0">
                    <TextBlock Text="{Binding StatusText}"
                               FontSize="11"
                               Foreground="#666666"
                               TextWrapping="Wrap"
                               TextAlignment="Center"/>
                </Border>

                <!-- Controllers Status -->
                <ItemsControl ItemsSource="{Binding Controllers}"
                              IsVisible="{Binding IsGattConnected}"
                              Margin="0,5,0,0">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="vm:ControllerViewModel">
                            <Border Background="#F5F5F5"
                                    CornerRadius="4"
                                    Padding="8"
                                    Margin="0,2">
                                <Grid ColumnDefinitions="Auto,*,Auto">
                                    <!-- Slot number -->
                                    <TextBlock Grid.Column="0"
                                               Text="{Binding SlotNumber, StringFormat='C{0}'}"
                                               FontWeight="Bold"
                                               FontSize="12"
                                               Foreground="#0096FF"
                                               VerticalAlignment="Center"
                                               Width="25"/>

                                    <!-- Throttle bar -->
                                    <Grid Grid.Column="1" Margin="5,0">
                                        <Border Background="#E0E0E0"
                                                CornerRadius="3"
                                                Height="16"/>
                                        <Border Background="#4CAF50"
                                                CornerRadius="3"
                                                Height="16"
                                                HorizontalAlignment="Left"
                                                Width="{Binding Throttle, Converter={x:Static vm:ThrottleToWidthConverter.Instance}}"/>
                                        <TextBlock Text="{Binding Throttle}"
                                                   FontSize="10"
                                                   FontWeight="Bold"
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Grid>

                                    <!-- Buttons and counts -->
                                    <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="4">
                                        <!-- Brake indicator and count -->
                                        <Border Background="{Binding IsBrakePressed, Converter={x:Static vm:BoolToBrushConverter.BrakeInstance}}"
                                                CornerRadius="2"
                                                Padding="4,2"
                                                MinWidth="35">
                                            <TextBlock Text="{Binding BrakeCount, StringFormat='B:{0}'}"
                                                       FontSize="9"
                                                       Foreground="White"
                                                       HorizontalAlignment="Center"/>
                                        </Border>
                                        <!-- Lane change indicator and count -->
                                        <Border Background="{Binding IsLaneChangePressed, Converter={x:Static vm:BoolToBrushConverter.LaneChangeInstance}}"
                                                CornerRadius="2"
                                                Padding="4,2"
                                                MinWidth="35">
                                            <TextBlock Text="{Binding LaneChangeCount, StringFormat='LC:{0}'}"
                                                       FontSize="9"
                                                       Foreground="White"
                                                       HorizontalAlignment="Center"/>
                                        </Border>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Legend -->
                <StackPanel Margin="0,10,0,0" Spacing="5">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Ellipse Width="12" Height="12" Fill="#DC3545"/>
                        <TextBlock Text="Not Found" FontSize="11" Foreground="Gray"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Ellipse Width="12" Height="12" Fill="#00C853"/>
                        <TextBlock Text="Detected (Adv)" FontSize="11" Foreground="Gray"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Ellipse Width="12" Height="12" Fill="#0096FF"/>
                        <TextBlock Text="GATT Connected" FontSize="11" Foreground="Gray"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Right Panel: GATT Services and Live Data -->
        <Grid Grid.Column="1" RowDefinitions="Auto,*,Auto,*">

            <!-- GATT Services Header -->
            <TextBlock Grid.Row="0"
                       Text="GATT Services"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Margin="0,0,0,5"/>

            <!-- GATT Services Panel -->
            <Border Grid.Row="1"
                    Background="#FAFAFA"
                    CornerRadius="8"
                    Padding="10">
                <Panel>
                    <!-- Services TreeView -->
                    <TreeView ItemsSource="{Binding Services}"
                              IsVisible="{Binding IsGattConnected}">
                        <TreeView.DataTemplates>
                            <TreeDataTemplate x:DataType="vm:ServiceViewModel"
                                              ItemsSource="{Binding Characteristics}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="S" FontWeight="Bold" Foreground="#0096FF"/>
                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                </StackPanel>
                            </TreeDataTemplate>
                            <DataTemplate x:DataType="vm:CharacteristicViewModel">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="C" FontWeight="Bold" Foreground="#00C853"/>
                                    <TextBlock Text="{Binding DisplayText}"/>
                                </StackPanel>
                            </DataTemplate>
                        </TreeView.DataTemplates>
                    </TreeView>

                    <!-- Placeholder when not connected -->
                    <StackPanel IsVisible="{Binding !IsGattConnected}"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Spacing="10">
                        <TextBlock Text="No GATT Connection"
                                   FontSize="14"
                                   Foreground="Gray"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Services will appear here when connected"
                                   FontSize="12"
                                   Foreground="#AAAAAA"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Panel>
            </Border>

            <!-- Live Data Header -->
            <TextBlock Grid.Row="2"
                       Text="Live Notification Data"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Margin="0,10,0,5"/>

            <!-- Live Data Panel -->
            <Border Grid.Row="3"
                    Background="#FAFAFA"
                    CornerRadius="8"
                    Padding="10">
                <Panel>
                    <!-- Notification Log -->
                    <ListBox ItemsSource="{Binding NotificationLog}"
                             IsVisible="{Binding IsGattConnected}"
                             Background="Transparent"
                             BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate x:DataType="vm:NotificationDataViewModel">
                                <Grid ColumnDefinitions="90,*,Auto" Margin="0,2">
                                    <TextBlock Grid.Column="0"
                                               Text="{Binding TimestampText}"
                                               FontFamily="Consolas"
                                               FontSize="11"
                                               Foreground="#666666"/>
                                    <TextBlock Grid.Column="1"
                                               Text="{Binding HexData}"
                                               FontFamily="Consolas"
                                               FontSize="11"
                                               Foreground="#333333"
                                               Margin="10,0"/>
                                    <TextBlock Grid.Column="2"
                                               Text="{Binding DecodedData}"
                                               FontFamily="Consolas"
                                               FontSize="11"
                                               Foreground="#0096FF"
                                               FontWeight="SemiBold"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Placeholder when not connected or no data -->
                    <StackPanel IsVisible="{Binding !IsGattConnected}"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Spacing="10">
                        <TextBlock Text="No Live Data"
                                   FontSize="14"
                                   Foreground="Gray"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Notification data will stream here when connected"
                                   FontSize="12"
                                   Foreground="#AAAAAA"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Panel>
            </Border>
        </Grid>
    </Grid>
</Window>
