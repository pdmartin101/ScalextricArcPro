<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:ScalextricBleMonitor.ViewModels"
        mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="500"
        x:Class="ScalextricBleMonitor.MainWindow"
        x:DataType="vm:MainViewModel"
        Title="Scalextric ARC Pro BLE Monitor"
        Width="700" Height="500"
        MinWidth="600" MinHeight="400"
        WindowStartupLocation="CenterScreen">

    <Design.DataContext>
        <vm:MainViewModel />
    </Design.DataContext>

    <Grid ColumnDefinitions="250,*" Margin="15">

        <!-- Left Panel: Connection Status -->
        <Border Grid.Column="0"
                Background="#FAFAFA"
                CornerRadius="8"
                Padding="15"
                Margin="0,0,10,0">
            <StackPanel Spacing="15">

                <!-- Title -->
                <TextBlock Text="Scalextric ARC Pro"
                           FontSize="18"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="BLE Monitor"
                           FontSize="14"
                           Foreground="Gray"
                           HorizontalAlignment="Center"
                           Margin="0,-10,0,10"/>

                <!-- Status circle -->
                <Ellipse Width="120" Height="120"
                         Fill="{Binding StatusIndicatorBrush}"
                         HorizontalAlignment="Center">
                    <Ellipse.Effect>
                        <DropShadowEffect BlurRadius="15"
                                          Opacity="0.3"
                                          OffsetX="0"
                                          OffsetY="3"/>
                    </Ellipse.Effect>
                </Ellipse>

                <!-- Connection status text -->
                <TextBlock Text="{Binding ConnectionStatusText}"
                           Foreground="{Binding StatusTextBrush}"
                           FontSize="20"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"/>

                <!-- Device name -->
                <TextBlock Text="{Binding DeviceName}"
                           FontSize="12"
                           Foreground="Gray"
                           HorizontalAlignment="Center"
                           IsVisible="{Binding IsConnected}"/>

                <!-- Status message -->
                <Border Background="#F0F0F0"
                        CornerRadius="5"
                        Padding="10"
                        Margin="0,10,0,0">
                    <TextBlock Text="{Binding StatusText}"
                               FontSize="11"
                               Foreground="#666666"
                               TextWrapping="Wrap"
                               TextAlignment="Center"/>
                </Border>

                <!-- Legend -->
                <StackPanel Margin="0,10,0,0" Spacing="5">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Ellipse Width="12" Height="12" Fill="#DC3545"/>
                        <TextBlock Text="Not Found" FontSize="11" Foreground="Gray"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Ellipse Width="12" Height="12" Fill="#00C853"/>
                        <TextBlock Text="Detected (Adv)" FontSize="11" Foreground="Gray"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Ellipse Width="12" Height="12" Fill="#0096FF"/>
                        <TextBlock Text="GATT Connected" FontSize="11" Foreground="Gray"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Right Panel: GATT Services -->
        <Border Grid.Column="1"
                Background="#FAFAFA"
                CornerRadius="8"
                Padding="15">
            <Grid RowDefinitions="Auto,*">
                <TextBlock Grid.Row="0"
                           Text="GATT Services"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Margin="0,0,0,10"/>

                <!-- Services TreeView -->
                <TreeView Grid.Row="1"
                          ItemsSource="{Binding Services}"
                          IsVisible="{Binding IsGattConnected}">
                    <TreeView.DataTemplates>
                        <TreeDataTemplate x:DataType="vm:ServiceViewModel"
                                          ItemsSource="{Binding Characteristics}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="S" FontWeight="Bold" Foreground="#0096FF"/>
                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                            </StackPanel>
                        </TreeDataTemplate>
                        <DataTemplate x:DataType="vm:CharacteristicViewModel">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="C" FontWeight="Bold" Foreground="#00C853"/>
                                <TextBlock Text="{Binding DisplayText}"/>
                            </StackPanel>
                        </DataTemplate>
                    </TreeView.DataTemplates>
                </TreeView>

                <!-- Placeholder when not connected -->
                <StackPanel Grid.Row="1"
                            IsVisible="{Binding !IsGattConnected}"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Spacing="10">
                    <TextBlock Text="No GATT Connection"
                               FontSize="14"
                               Foreground="Gray"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Services will appear here when connected"
                               FontSize="12"
                               Foreground="#AAAAAA"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
