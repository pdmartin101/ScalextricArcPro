<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ScalextricRace.ViewModels"
        xmlns:converters="using:ScalextricRace.Converters"
        x:Class="ScalextricRace.Views.MainWindow"
        x:DataType="vm:MainViewModel"
        Title="{Binding Title}"
        Width="800" Height="600"
        MinWidth="600" MinHeight="400">

    <Grid RowDefinitions="Auto,*,Auto" Margin="20">

        <!-- Header: Title and Settings -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,20">
            <TextBlock Grid.Column="0"
                       Text="{Binding Title}"
                       FontSize="28"
                       FontWeight="Bold" />

            <!-- Settings Button with Flyout -->
            <Button Grid.Column="1"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="8"
                    ToolTip.Tip="Power Settings">
                <Button.Flyout>
                    <Flyout Placement="BottomEdgeAlignedRight">
                        <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                                Padding="20"
                                MinWidth="320">
                            <StackPanel Spacing="15">
                                <!-- Flyout Header -->
                                <TextBlock Text="Power Settings"
                                           FontSize="18"
                                           FontWeight="SemiBold" />

                                <!-- Power Toggle Button -->
                                <Button Content="{Binding PowerButtonText}"
                                        Command="{Binding TogglePowerCommand}"
                                        IsEnabled="{Binding IsConnected}"
                                        HorizontalAlignment="Stretch"
                                        Height="45"
                                        FontSize="14"
                                        FontWeight="Bold" />

                                <!-- Power Level (only in global mode) -->
                                <StackPanel Spacing="5" IsVisible="{Binding !IsPerSlotPowerMode}">
                                    <Grid ColumnDefinitions="*,Auto">
                                        <TextBlock Grid.Column="0"
                                                   Text="Power Level"
                                                   FontSize="12"
                                                   Foreground="Gray" />
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding PowerLevel}"
                                                   FontSize="14"
                                                   FontWeight="Bold" />
                                    </Grid>
                                    <Slider Minimum="0"
                                            Maximum="63"
                                            Value="{Binding PowerLevel}" />
                                </StackPanel>

                                <!-- Throttle Profile (only in global mode) -->
                                <StackPanel Spacing="5" IsVisible="{Binding !IsPerSlotPowerMode}">
                                    <TextBlock Text="Throttle Profile"
                                               FontSize="12"
                                               Foreground="Gray" />
                                    <ComboBox ItemsSource="{Binding AvailableThrottleProfiles}"
                                              SelectedItem="{Binding SelectedThrottleProfile}"
                                              HorizontalAlignment="Stretch" />
                                </StackPanel>

                                <!-- Per-Slot Controls (only in per-slot mode) -->
                                <ScrollViewer IsVisible="{Binding IsPerSlotPowerMode}"
                                              MaxHeight="400"
                                              VerticalScrollBarVisibility="Auto">
                                    <ItemsControl ItemsSource="{Binding Controllers}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="vm:ControllerViewModel">
                                                <Border Background="#F5F5F5"
                                                        CornerRadius="6"
                                                        Padding="12"
                                                        Margin="0,0,0,8">
                                                    <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                                                        <!-- Slot Header -->
                                                        <TextBlock Grid.Row="0" Grid.Column="0"
                                                                   Text="{Binding SlotLabel}"
                                                                   FontSize="13"
                                                                   FontWeight="SemiBold" />
                                                        <TextBlock Grid.Row="0" Grid.Column="1"
                                                                   Text="{Binding PowerLevel}"
                                                                   FontSize="13"
                                                                   FontWeight="Bold" />

                                                        <!-- Power Slider -->
                                                        <Slider Grid.Row="1" Grid.ColumnSpan="2"
                                                                Minimum="0"
                                                                Maximum="63"
                                                                Value="{Binding PowerLevel}"
                                                                Margin="0,5,0,5" />

                                                        <!-- Throttle Profile -->
                                                        <TextBlock Grid.Row="2" Grid.Column="0"
                                                                   Text="Profile"
                                                                   FontSize="11"
                                                                   Foreground="Gray"
                                                                   VerticalAlignment="Center" />
                                                        <ComboBox Grid.Row="2" Grid.Column="1"
                                                                  ItemsSource="{x:Static vm:ControllerViewModel.AvailableProfiles}"
                                                                  SelectedItem="{Binding ThrottleProfile}"
                                                                  FontSize="11"
                                                                  MinWidth="100" />
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>

                                <Separator Margin="0,5" />

                                <!-- Per-Slot Mode Toggle -->
                                <Button Content="{Binding PerSlotToggleText}"
                                        Command="{Binding TogglePerSlotPowerModeCommand}"
                                        HorizontalAlignment="Stretch"
                                        Height="35"
                                        FontSize="12" />
                            </StackPanel>
                        </Border>
                    </Flyout>
                </Button.Flyout>

                <!-- Gear Icon (using Unicode) -->
                <TextBlock Text="&#x2699;"
                           FontSize="24"
                           VerticalAlignment="Center" />
            </Button>
        </Grid>

        <!-- Main Content: Race Info -->
        <Border Grid.Row="1"
                Background="#FAFAFA"
                CornerRadius="8"
                Padding="20">
            <!-- Race Status Placeholder -->
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                <TextBlock Text="Race Status"
                           FontSize="20"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10" />
                <TextBlock Text="Connect to a Scalextric powerbase to begin"
                           FontSize="14"
                           Foreground="Gray"
                           HorizontalAlignment="Center" />
            </StackPanel>
        </Border>

        <!-- Footer: Status Bar with Connection Indicator -->
        <Grid Grid.Row="2" ColumnDefinitions="Auto,*,Auto" Margin="0,10,0,0">
            <!-- Connection Status Indicator -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                <Ellipse Width="12" Height="12"
                         Fill="{Binding CurrentConnectionState, Converter={x:Static converters:ConnectionStateToColorConverter.Instance}}" />
                <TextBlock Text="{Binding ConnectionStatusText}"
                           FontSize="11"
                           Foreground="Gray"
                           VerticalAlignment="Center" />
            </StackPanel>

            <!-- Status Message -->
            <TextBlock Grid.Column="1"
                       Text="{Binding StatusMessage}"
                       FontSize="11"
                       Foreground="Gray"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />

            <!-- Version -->
            <TextBlock Grid.Column="2"
                       Text="{Binding Version, StringFormat='v{0}'}"
                       FontSize="11"
                       Foreground="Gray"
                       VerticalAlignment="Center" />
        </Grid>
    </Grid>
</Window>
