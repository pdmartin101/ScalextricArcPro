<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ScalextricRace.ViewModels"
        xmlns:models="using:ScalextricRace.Models"
        xmlns:converters="using:ScalextricRace.Converters"
        x:Class="ScalextricRace.Views.MainWindow"
        x:DataType="vm:MainViewModel"
        Title="{Binding Title}"
        Width="800" Height="600"
        MinWidth="600" MinHeight="400">

    <Window.KeyBindings>
        <KeyBinding Gesture="Escape" Command="{Binding HandleEscapeKeyCommand}" />
    </Window.KeyBindings>

    <Grid RowDefinitions="Auto,*,Auto" Margin="20">

        <!-- Header: Hamburger Menu, Title, and Settings (hidden in Racing mode) -->
        <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto" Margin="0,0,0,20"
              IsVisible="{Binding IsSetupMode}">

            <!-- Hamburger Menu Button -->
            <Button Grid.Column="0"
                    Command="{Binding ToggleMenuCommand}"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="8"
                    Margin="0,0,15,0"
                    ToolTip.Tip="Menu">
                <TextBlock Text="&#x2630;"
                           FontSize="24"
                           VerticalAlignment="Center" />
            </Button>

            <!-- Title (shows current mode) -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10">
                <TextBlock Text="{Binding Title}"
                           FontSize="28"
                           FontWeight="Bold" />
                <TextBlock Text="-"
                           FontSize="28"
                           Foreground="Gray"
                           IsVisible="{Binding !IsRaceMode}" />
                <TextBlock Text="Race Config"
                           FontSize="28"
                           Foreground="Gray"
                           IsVisible="{Binding IsRaceConfigMode}" />
                <TextBlock Text="Cars"
                           FontSize="28"
                           Foreground="Gray"
                           IsVisible="{Binding IsCarsMode}" />
                <TextBlock Text="Drivers"
                           FontSize="28"
                           Foreground="Gray"
                           IsVisible="{Binding IsDriversMode}" />
                <TextBlock Text="Settings"
                           FontSize="28"
                           Foreground="Gray"
                           IsVisible="{Binding IsSettingsMode}" />
            </StackPanel>

            <!-- Settings Button with Flyout (Power Settings) -->
            <Button Grid.Column="2"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="8"
                    ToolTip.Tip="Power Settings">
                <Button.Flyout>
                    <Flyout Placement="BottomEdgeAlignedRight">
                        <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                                Padding="20"
                                MinWidth="320">
                            <StackPanel Spacing="15">
                                <!-- Flyout Header -->
                                <TextBlock Text="Power Settings"
                                           FontSize="18"
                                           FontWeight="SemiBold" />

                                <!-- Power Toggle Button -->
                                <Button Content="{Binding PowerButtonText}"
                                        Command="{Binding TogglePowerCommand}"
                                        IsEnabled="{Binding IsConnected}"
                                        HorizontalAlignment="Stretch"
                                        Height="45"
                                        FontSize="14"
                                        FontWeight="Bold" />

                                <!-- Power Level (only in global mode) -->
                                <StackPanel Spacing="5" IsVisible="{Binding !IsPerSlotPowerMode}">
                                    <Grid ColumnDefinitions="*,Auto">
                                        <TextBlock Grid.Column="0"
                                                   Text="Power Level"
                                                   FontSize="12"
                                                   Foreground="Gray" />
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding PowerLevel}"
                                                   FontSize="14"
                                                   FontWeight="Bold" />
                                    </Grid>
                                    <Slider Minimum="0"
                                            Maximum="63"
                                            Value="{Binding PowerLevel}" />
                                </StackPanel>

                                <!-- Throttle Profile (only in global mode) -->
                                <StackPanel Spacing="5" IsVisible="{Binding !IsPerSlotPowerMode}">
                                    <TextBlock Text="Throttle Profile"
                                               FontSize="12"
                                               Foreground="Gray" />
                                    <ComboBox ItemsSource="{Binding AvailableThrottleProfiles}"
                                              SelectedItem="{Binding SelectedThrottleProfile}"
                                              HorizontalAlignment="Stretch" />
                                </StackPanel>

                                <!-- Per-Slot Controls (only in per-slot mode) -->
                                <ScrollViewer IsVisible="{Binding IsPerSlotPowerMode}"
                                              MaxHeight="400"
                                              VerticalScrollBarVisibility="Auto">
                                    <ItemsControl ItemsSource="{Binding Controllers}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="vm:ControllerViewModel">
                                                <Border Background="#F5F5F5"
                                                        CornerRadius="6"
                                                        Padding="12"
                                                        Margin="0,0,0,8">
                                                    <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                                                        <!-- Slot Header -->
                                                        <TextBlock Grid.Row="0" Grid.Column="0"
                                                                   Text="{Binding SlotLabel}"
                                                                   FontSize="13"
                                                                   FontWeight="SemiBold" />
                                                        <TextBlock Grid.Row="0" Grid.Column="1"
                                                                   Text="{Binding PowerLevel}"
                                                                   FontSize="13"
                                                                   FontWeight="Bold" />

                                                        <!-- Power Slider -->
                                                        <Slider Grid.Row="1" Grid.ColumnSpan="2"
                                                                Minimum="0"
                                                                Maximum="63"
                                                                Value="{Binding PowerLevel}"
                                                                Margin="0,5,0,5" />

                                                        <!-- Throttle Profile -->
                                                        <TextBlock Grid.Row="2" Grid.Column="0"
                                                                   Text="Profile"
                                                                   FontSize="11"
                                                                   Foreground="Gray"
                                                                   VerticalAlignment="Center" />
                                                        <ComboBox Grid.Row="2" Grid.Column="1"
                                                                  ItemsSource="{x:Static vm:ControllerViewModel.AvailableProfiles}"
                                                                  SelectedItem="{Binding ThrottleProfile}"
                                                                  FontSize="11"
                                                                  MinWidth="100" />
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>

                                <Separator Margin="0,5" />

                                <!-- Per-Slot Mode Toggle -->
                                <Button Content="{Binding PerSlotToggleText}"
                                        Command="{Binding TogglePerSlotPowerModeCommand}"
                                        HorizontalAlignment="Stretch"
                                        Height="35"
                                        FontSize="12" />
                            </StackPanel>
                        </Border>
                    </Flyout>
                </Button.Flyout>

                <!-- Gear Icon (using Unicode) -->
                <TextBlock Text="&#x2699;"
                           FontSize="24"
                           VerticalAlignment="Center" />
            </Button>
        </Grid>

        <!-- Hamburger Menu Overlay -->
        <Border Grid.Row="1"
                Background="#80000000"
                IsVisible="{Binding IsMenuOpen}"
                ZIndex="100">
            <Border Background="White"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Stretch"
                    Width="250"
                    CornerRadius="0,8,8,0"
                    Padding="0">
                <StackPanel>
                    <!-- Menu Header -->
                    <Border Background="#F0F0F0" Padding="20,15">
                        <TextBlock Text="Menu"
                                   FontSize="18"
                                   FontWeight="SemiBold" />
                    </Border>

                    <!-- Menu Items -->
                    <Button Content="Race"
                            Command="{Binding NavigateToCommand}"
                            CommandParameter="{x:Static models:NavigationMode.Race}"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="20,15"
                            FontSize="16" />

                    <Button Content="Cars"
                            Command="{Binding NavigateToCommand}"
                            CommandParameter="{x:Static models:NavigationMode.Cars}"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="20,15"
                            FontSize="16" />

                    <Button Content="Drivers"
                            Command="{Binding NavigateToCommand}"
                            CommandParameter="{x:Static models:NavigationMode.Drivers}"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="20,15"
                            FontSize="16" />

                    <Button Content="Race Config"
                            Command="{Binding NavigateToCommand}"
                            CommandParameter="{x:Static models:NavigationMode.RaceConfig}"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="20,15"
                            FontSize="16" />

                    <Separator Margin="10,5" />

                    <Button Content="Settings"
                            Command="{Binding NavigateToCommand}"
                            CommandParameter="{x:Static models:NavigationMode.Settings}"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="20,15"
                            FontSize="16" />
                </StackPanel>
            </Border>
        </Border>

        <!-- Click-away overlay to close menu -->
        <Border Grid.Row="1"
                Background="Transparent"
                IsVisible="{Binding IsMenuOpen}"
                ZIndex="99"
                PointerPressed="OnMenuOverlayPressed" />

        <!-- Main Content Area -->
        <Grid Grid.Row="1">

            <!-- Race Mode Content - List of configured races -->
            <Border Background="#FAFAFA"
                    CornerRadius="8"
                    Padding="20"
                    IsVisible="{Binding IsRaceMode}">
                <Grid RowDefinitions="Auto,*">
                    <!-- Header -->
                    <TextBlock Grid.Row="0"
                               Text="Select a Race"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Margin="0,0,0,15" />

                    <!-- Race List -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Races}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="vm:RaceViewModel">
                                    <Button Command="{Binding RequestStartCommand}"
                                            HorizontalAlignment="Stretch"
                                            HorizontalContentAlignment="Stretch"
                                            Background="White"
                                            Padding="0"
                                            Margin="0,0,0,8"
                                            Cursor="Hand">
                                        <Border BorderBrush="#E0E0E0"
                                                BorderThickness="1"
                                                CornerRadius="6"
                                                Padding="15,12">
                                            <Grid ColumnDefinitions="Auto,*,Auto">
                                                <!-- Race Image -->
                                                <Border Grid.Column="0"
                                                        Background="#F5F5F5"
                                                        CornerRadius="4"
                                                        Width="60"
                                                        Height="40"
                                                        ClipToBounds="True"
                                                        Margin="0,0,15,0">
                                                    <Panel>
                                                        <TextBlock Text="&#x1F3C1;"
                                                                   FontSize="20"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"
                                                                   Foreground="#CCCCCC"
                                                                   IsVisible="{Binding !HasImage}" />
                                                        <Image Source="{Binding ImagePath, Converter={x:Static converters:ImagePathToBitmapConverter.Instance}}"
                                                               Stretch="UniformToFill"
                                                               IsVisible="{Binding HasImage}" />
                                                    </Panel>
                                                </Border>

                                                <!-- Race Info -->
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Name}"
                                                               FontSize="14"
                                                               FontWeight="SemiBold" />
                                                    <TextBlock Text="{Binding StagesSummary}"
                                                               FontSize="11"
                                                               Foreground="Gray" />
                                                </StackPanel>

                                                <!-- Arrow -->
                                                <TextBlock Grid.Column="2"
                                                           Text=">"
                                                           FontSize="18"
                                                           Foreground="Gray"
                                                           VerticalAlignment="Center"
                                                           Margin="10,0,0,0" />
                                            </Grid>
                                        </Border>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Cars Mode Content -->
            <Border Background="#FAFAFA"
                    CornerRadius="8"
                    Padding="20"
                    IsVisible="{Binding IsCarsMode}">
                <Grid RowDefinitions="Auto,*">
                    <!-- Cars Header with Add Button -->
                    <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,15">
                        <TextBlock Text="My Cars"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center" />
                        <Button Grid.Column="1"
                                Content="+ Add Car"
                                Command="{Binding CarManagement.AddCarCommand}"
                                Padding="15,8"
                                FontSize="13" />
                    </Grid>

                    <!-- Cars Grid -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="CarsItemsControl" ItemsSource="{Binding Cars}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="vm:CarViewModel">
                                    <Border Background="White"
                                            BorderBrush="#E0E0E0"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            Width="220"
                                            Margin="0,0,15,15"
                                            Padding="15">
                                        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto">
                                            <!-- Car Image (clickable to change) -->
                                            <Button Grid.Row="0"
                                                    Command="{Binding RequestImageChangeCommand}"
                                                    Background="Transparent"
                                                    Padding="0"
                                                    Margin="0,0,0,10"
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Stretch"
                                                    Cursor="Hand">
                                                <Border Background="#F5F5F5"
                                                        CornerRadius="6"
                                                        Height="100"
                                                        ClipToBounds="True">
                                                    <!-- Placeholder icon (shown when no image) -->
                                                    <Panel>
                                                        <TextBlock Text="&#x1F3CE;"
                                                                   FontSize="48"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"
                                                                   Foreground="#CCCCCC"
                                                                   IsVisible="{Binding !HasImage}" />
                                                        <!-- Actual image (shown when image is set) -->
                                                        <Image Source="{Binding ImagePath, Converter={x:Static converters:ImagePathToBitmapConverter.Instance}}"
                                                               Stretch="Uniform"
                                                               IsVisible="{Binding HasImage}" />
                                                    </Panel>
                                                </Border>
                                            </Button>

                                            <!-- Car Name -->
                                            <TextBox Grid.Row="1"
                                                     Text="{Binding Name}"
                                                     FontSize="16"
                                                     FontWeight="SemiBold"
                                                     Margin="0,0,0,10"
                                                     BorderThickness="0"
                                                     Background="Transparent"
                                                     Padding="0" />

                                            <!-- Default Power (read-only, set via tuning) -->
                                            <Grid Grid.Row="2" ColumnDefinitions="*,Auto" Margin="0,0,0,8">
                                                <TextBlock Text="Default Power"
                                                           FontSize="11"
                                                           Foreground="Gray" />
                                                <TextBlock Grid.Column="1"
                                                           Text="{Binding DefaultPower}"
                                                           FontSize="11"
                                                           FontWeight="SemiBold" />
                                            </Grid>

                                            <!-- Ghost Max / Min Power (read-only, needs tuning) -->
                                            <Grid Grid.Row="3" ColumnDefinitions="*,Auto,Auto,Auto" Margin="0,0,0,5">
                                                <TextBlock Text="Ghost Max / Min"
                                                           FontSize="11"
                                                           Foreground="Gray" />
                                                <TextBlock Grid.Column="1"
                                                           Text="{Binding GhostMaxPower}"
                                                           FontSize="11"
                                                           FontWeight="SemiBold" />
                                                <TextBlock Grid.Column="2"
                                                           Text=" / "
                                                           FontSize="11"
                                                           Foreground="Gray" />
                                                <TextBlock Grid.Column="3"
                                                           Text="{Binding MinPower}"
                                                           FontSize="11"
                                                           FontWeight="SemiBold" />
                                            </Grid>

                                            <!-- Action Buttons -->
                                            <StackPanel Grid.Row="4"
                                                        Orientation="Horizontal"
                                                        HorizontalAlignment="Right"
                                                        Spacing="8"
                                                        Margin="0,10,0,0">
                                                <Button Content="Tune"
                                                        Command="{Binding RequestTuneCommand}"
                                                        Padding="10,5"
                                                        FontSize="11" />
                                                <Button Content="Delete"
                                                        Command="{Binding RequestDeleteCommand}"
                                                        IsVisible="{Binding CanDelete}"
                                                        Padding="10,5"
                                                        FontSize="11" />
                                            </StackPanel>

                                            <!-- Default Car Badge -->
                                            <Border Grid.Row="4"
                                                    Background="#E3F2FD"
                                                    CornerRadius="4"
                                                    Padding="8,4"
                                                    HorizontalAlignment="Left"
                                                    IsVisible="{Binding IsDefault}"
                                                    Margin="0,10,0,0">
                                                <TextBlock Text="Default"
                                                           FontSize="10"
                                                           Foreground="#1976D2" />
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Drivers Mode Content -->
            <Border Background="#FAFAFA"
                    CornerRadius="8"
                    Padding="20"
                    IsVisible="{Binding IsDriversMode}">
                <Grid RowDefinitions="Auto,*">
                    <!-- Drivers Header with Add Button -->
                    <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,15">
                        <TextBlock Text="My Drivers"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center" />
                        <Button Grid.Column="1"
                                Content="+ Add Driver"
                                Command="{Binding DriverManagement.AddDriverCommand}"
                                Padding="15,8"
                                FontSize="13" />
                    </Grid>

                    <!-- Drivers Grid -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Drivers}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="vm:DriverViewModel">
                                    <Border Background="White"
                                            BorderBrush="#E0E0E0"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            Width="220"
                                            Margin="0,0,15,15"
                                            Padding="15">
                                        <Grid RowDefinitions="Auto,Auto,Auto,Auto">
                                            <!-- Driver Image/Avatar (clickable to change) -->
                                            <Button Grid.Row="0"
                                                    Command="{Binding RequestImageChangeCommand}"
                                                    Background="Transparent"
                                                    Padding="0"
                                                    Margin="0,0,0,10"
                                                    HorizontalAlignment="Center"
                                                    Cursor="Hand">
                                                <Border Background="#F5F5F5"
                                                        CornerRadius="50"
                                                        Width="100"
                                                        Height="100"
                                                        ClipToBounds="True">
                                                    <Panel>
                                                        <!-- Placeholder icon (shown when no image) -->
                                                        <TextBlock Text="&#x1F464;"
                                                                   FontSize="48"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"
                                                                   Foreground="#CCCCCC"
                                                                   IsVisible="{Binding !HasImage}" />
                                                        <!-- Actual image (shown when image is set) -->
                                                        <Image Source="{Binding ImagePath, Converter={x:Static converters:ImagePathToBitmapConverter.Instance}}"
                                                               Stretch="UniformToFill"
                                                               IsVisible="{Binding HasImage}" />
                                                    </Panel>
                                                </Border>
                                            </Button>

                                            <!-- Driver Name -->
                                            <TextBox Grid.Row="1"
                                                     Text="{Binding Name}"
                                                     FontSize="16"
                                                     FontWeight="SemiBold"
                                                     Margin="0,0,0,10"
                                                     BorderThickness="0"
                                                     Background="Transparent"
                                                     Padding="0"
                                                     HorizontalAlignment="Center" />

                                            <!-- Power Percentage Slider with +/- buttons -->
                                            <Grid Grid.Row="2" ColumnDefinitions="Auto,*,Auto,Auto" Margin="0,0,0,8">
                                                <Button Grid.Column="0"
                                                        Content="-"
                                                        Command="{Binding DecrementPowerPercentageCommand}"
                                                        Width="28"
                                                        Height="28"
                                                        Padding="0"
                                                        FontSize="14"
                                                        FontWeight="Bold"
                                                        HorizontalContentAlignment="Center"
                                                        VerticalContentAlignment="Center" />
                                                <Slider Grid.Column="1"
                                                        Minimum="50"
                                                        Maximum="100"
                                                        Value="{Binding PowerPercentageSliderValue}"
                                                        Margin="6,0"
                                                        VerticalAlignment="Center" />
                                                <Button Grid.Column="2"
                                                        Content="+"
                                                        Command="{Binding IncrementPowerPercentageCommand}"
                                                        Width="28"
                                                        Height="28"
                                                        Padding="0"
                                                        FontSize="14"
                                                        FontWeight="Bold"
                                                        HorizontalContentAlignment="Center"
                                                        VerticalContentAlignment="Center" />
                                                <TextBlock Grid.Column="3"
                                                           Text="{Binding PowerPercentageDisplay}"
                                                           FontSize="11"
                                                           Width="35"
                                                           TextAlignment="Right"
                                                           VerticalAlignment="Center"
                                                           Margin="4,0,0,0" />
                                            </Grid>

                                            <!-- Delete Button -->
                                            <Button Grid.Row="3"
                                                    Content="Delete"
                                                    Command="{Binding RequestDeleteCommand}"
                                                    IsVisible="{Binding CanDelete}"
                                                    Padding="8,5"
                                                    FontSize="10"
                                                    HorizontalAlignment="Right"
                                                    Margin="0,5,0,0" />

                                            <!-- Default Driver Badge -->
                                            <Border Grid.Row="3"
                                                    Background="#E3F2FD"
                                                    CornerRadius="4"
                                                    Padding="8,4"
                                                    HorizontalAlignment="Left"
                                                    IsVisible="{Binding IsDefault}"
                                                    Margin="0,10,0,0">
                                                <TextBlock Text="Default"
                                                           FontSize="10"
                                                           Foreground="#1976D2" />
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Race Config Mode Content -->
            <Border Background="#FAFAFA"
                    CornerRadius="8"
                    Padding="20"
                    IsVisible="{Binding IsRaceConfigMode}">
                <Grid RowDefinitions="Auto,*">
                    <!-- Race Config Header with Add Button -->
                    <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,15">
                        <TextBlock Text="My Race Configurations"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center" />
                        <Button Grid.Column="1"
                                Content="+ Add Race"
                                Command="{Binding RaceManagement.AddRaceCommand}"
                                Padding="15,8"
                                FontSize="13" />
                    </Grid>

                    <!-- Races Grid -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Races}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="vm:RaceViewModel">
                                    <Border Background="White"
                                            BorderBrush="#E0E0E0"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            Width="220"
                                            Margin="0,0,15,15"
                                            Padding="15">
                                        <Grid RowDefinitions="Auto,Auto,Auto,Auto">
                                            <!-- Race Image (clickable to change) -->
                                            <Button Grid.Row="0"
                                                    Command="{Binding RequestImageChangeCommand}"
                                                    Background="Transparent"
                                                    Padding="0"
                                                    Margin="0,0,0,10"
                                                    HorizontalAlignment="Stretch"
                                                    Cursor="Hand">
                                                <Border Background="#F5F5F5"
                                                        CornerRadius="6"
                                                        Height="100"
                                                        ClipToBounds="True">
                                                    <Panel>
                                                        <!-- Placeholder icon (shown when no image) -->
                                                        <TextBlock Text="&#x1F3C1;"
                                                                   FontSize="48"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"
                                                                   Foreground="#CCCCCC"
                                                                   IsVisible="{Binding !HasImage}" />
                                                        <!-- Actual image (shown when image is set) -->
                                                        <Image Source="{Binding ImagePath, Converter={x:Static converters:ImagePathToBitmapConverter.Instance}}"
                                                               Stretch="UniformToFill"
                                                               IsVisible="{Binding HasImage}" />
                                                    </Panel>
                                                </Border>
                                            </Button>

                                            <!-- Race Name -->
                                            <TextBlock Grid.Row="1"
                                                       Text="{Binding Name}"
                                                       FontSize="16"
                                                       FontWeight="SemiBold"
                                                       Margin="0,0,0,5" />

                                            <!-- Stages Summary -->
                                            <TextBlock Grid.Row="2"
                                                       Text="{Binding StagesSummary}"
                                                       FontSize="11"
                                                       Foreground="Gray"
                                                       TextWrapping="Wrap"
                                                       Margin="0,0,0,10" />

                                            <!-- Edit and Delete Buttons -->
                                            <Grid Grid.Row="3" ColumnDefinitions="*,Auto,Auto">
                                                <!-- Default Race Badge -->
                                                <Border Grid.Column="0"
                                                        Background="#E3F2FD"
                                                        CornerRadius="4"
                                                        Padding="8,4"
                                                        HorizontalAlignment="Left"
                                                        IsVisible="{Binding IsDefault}"
                                                        VerticalAlignment="Center">
                                                    <TextBlock Text="Default"
                                                               FontSize="10"
                                                               Foreground="#1976D2" />
                                                </Border>

                                                <!-- Edit Button -->
                                                <Button Grid.Column="1"
                                                        Content="Edit"
                                                        Command="{Binding RequestEditCommand}"
                                                        Padding="10,5"
                                                        FontSize="11"
                                                        Margin="0,0,5,0" />

                                                <!-- Delete Button -->
                                                <Button Grid.Column="2"
                                                        Content="Delete"
                                                        Command="{Binding RequestDeleteCommand}"
                                                        IsVisible="{Binding CanDelete}"
                                                        Padding="8,5"
                                                        FontSize="11" />
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Settings Mode Content (placeholder) -->
            <Border Background="#FAFAFA"
                    CornerRadius="8"
                    Padding="20"
                    IsVisible="{Binding IsSettingsMode}">
                <StackPanel VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                    <TextBlock Text="Settings"
                               FontSize="20"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10" />
                    <TextBlock Text="Application settings coming soon..."
                               FontSize="14"
                               Foreground="Gray"
                               HorizontalAlignment="Center" />
                </StackPanel>
            </Border>

            <!-- Configure Mode Content -->
            <Border Background="#f8f9fa"
                    CornerRadius="8"
                    Padding="20"
                    IsVisible="{Binding IsConfigureMode}">
                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Configure Header -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,20">
                        <TextBlock Text="Configure Race"
                                   FontSize="24"
                                   FontWeight="Bold" />
                        <TextBlock Text="{Binding ActiveRace.Name}"
                                   FontSize="14"
                                   Foreground="Gray" />
                    </StackPanel>

                    <!-- Two Column Layout: Entries | Settings -->
                    <Grid Grid.Row="1" ColumnDefinitions="*,Auto,Auto">
                        <!-- Left Panel: Controller Slots -->
                        <Border Grid.Column="0"
                                Background="White"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="15">
                            <Grid RowDefinitions="Auto,*">
                                <TextBlock Grid.Row="0"
                                           Text="Controllers"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,15" />

                                <!-- All 6 Controller Slots -->
                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                    <ItemsControl ItemsSource="{Binding RaceEntries}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="vm:RaceEntryViewModel">
                                                <Border BorderBrush="#E8E8E8"
                                                        BorderThickness="1"
                                                        CornerRadius="4"
                                                        Margin="0,0,0,6"
                                                        ClipToBounds="True">
                                                    <Grid ColumnDefinitions="0.1*,0.3*,0.3*,0.3*">
                                                        <!-- Color band with checkbox (~10% width) -->
                                                        <Border Grid.Column="0"
                                                                Background="{Binding SlotColor}"
                                                                Padding="4">
                                                            <CheckBox IsChecked="{Binding IsEnabled}"
                                                                      HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center" />
                                                        </Border>

                                                        <!-- Car section (clickable with flyout) -->
                                                        <Button Grid.Column="1"
                                                                Background="Transparent"
                                                                BorderBrush="#E8E8E8"
                                                                BorderThickness="0,0,1,0"
                                                                Padding="6"
                                                                HorizontalAlignment="Stretch"
                                                                VerticalAlignment="Stretch"
                                                                HorizontalContentAlignment="Left"
                                                                Cursor="Hand">
                                                            <Grid ColumnDefinitions="Auto,*">
                                                                <!-- Car Image (4:3 aspect ratio) -->
                                                                <Border Grid.Column="0"
                                                                        Width="48" Height="36"
                                                                        CornerRadius="4"
                                                                        Background="#F0F0F0"
                                                                        Margin="0,0,6,0">
                                                                    <Image Source="{Binding CarImagePath, Converter={x:Static converters:ImagePathToBitmapConverter.Instance}}"
                                                                           Stretch="UniformToFill"
                                                                           IsVisible="{Binding HasCar}" />
                                                                </Border>
                                                                <!-- Car Info -->
                                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                                    <TextBlock Text="Car"
                                                                               FontSize="10"
                                                                               Foreground="#888888" />
                                                                    <TextBlock Text="{Binding CarDisplayName}"
                                                                               FontSize="11"
                                                                               FontWeight="SemiBold"
                                                                               TextTrimming="CharacterEllipsis" />
                                                                    <TextBlock Text="{Binding CarPowerDisplay}"
                                                                               FontSize="10"
                                                                               Foreground="#666666"
                                                                               IsVisible="{Binding HasCar}" />
                                                                </StackPanel>
                                                            </Grid>
                                                            <Button.Flyout>
                                                                <Flyout Placement="Bottom"
                                                                        IsOpen="{Binding IsCarPopupOpen, Mode=TwoWay}">
                                                                    <ListBox ItemsSource="{Binding AvailableCars}"
                                                                             SelectedItem="{Binding SelectedCar}"
                                                                             MinWidth="180"
                                                                             MaxHeight="250"
                                                                             Background="White"
                                                                             Padding="4"
                                                                             SelectionChanged="OnCarSelectionChanged">
                                                                        <ListBox.ItemTemplate>
                                                                            <DataTemplate x:DataType="vm:CarViewModel">
                                                                                <Grid ColumnDefinitions="Auto,*" Margin="2">
                                                                                    <Border Grid.Column="0"
                                                                                            Width="32" Height="32"
                                                                                            CornerRadius="4"
                                                                                            Background="#F0F0F0"
                                                                                            Margin="0,0,8,0">
                                                                                        <Image Source="{Binding ImagePath, Converter={x:Static converters:ImagePathToBitmapConverter.Instance}}"
                                                                                               Stretch="UniformToFill" />
                                                                                    </Border>
                                                                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                                                        <TextBlock Text="{Binding Name}"
                                                                                                   FontSize="12"
                                                                                                   FontWeight="SemiBold" />
                                                                                        <TextBlock Text="{Binding DefaultPower, StringFormat='Power: {0}'}"
                                                                                                   FontSize="10"
                                                                                                   Foreground="#666666" />
                                                                                    </StackPanel>
                                                                                </Grid>
                                                                            </DataTemplate>
                                                                        </ListBox.ItemTemplate>
                                                                    </ListBox>
                                                                </Flyout>
                                                            </Button.Flyout>
                                                        </Button>

                                                        <!-- Driver section (clickable with flyout) -->
                                                        <Button Grid.Column="2"
                                                                Background="Transparent"
                                                                BorderBrush="#E8E8E8"
                                                                BorderThickness="0,0,1,0"
                                                                Padding="6"
                                                                HorizontalAlignment="Stretch"
                                                                VerticalAlignment="Stretch"
                                                                HorizontalContentAlignment="Left"
                                                                Cursor="Hand">
                                                            <Grid ColumnDefinitions="Auto,*">
                                                                <!-- Driver Image -->
                                                                <Border Grid.Column="0"
                                                                        Width="36" Height="36"
                                                                        CornerRadius="18"
                                                                        Background="#F0F0F0"
                                                                        Margin="0,0,6,0"
                                                                        IsVisible="{Binding HasDriver}">
                                                                    <Border.Clip>
                                                                        <EllipseGeometry Center="18,18" RadiusX="18" RadiusY="18" />
                                                                    </Border.Clip>
                                                                    <Image Source="{Binding DriverImagePath, Converter={x:Static converters:ImagePathToBitmapConverter.Instance}}"
                                                                           Stretch="UniformToFill" />
                                                                </Border>
                                                                <!-- Driver Info -->
                                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                                    <TextBlock Text="Driver"
                                                                               FontSize="10"
                                                                               Foreground="#888888" />
                                                                    <TextBlock Text="{Binding DriverDisplayName}"
                                                                               FontSize="11"
                                                                               FontWeight="SemiBold"
                                                                               TextTrimming="CharacterEllipsis" />
                                                                    <TextBlock Text="{Binding DriverPowerDisplay}"
                                                                               FontSize="10"
                                                                               Foreground="#666666"
                                                                               IsVisible="{Binding HasDriver}" />
                                                                </StackPanel>
                                                            </Grid>
                                                            <Button.Flyout>
                                                                <Flyout Placement="Bottom"
                                                                        IsOpen="{Binding IsDriverPopupOpen, Mode=TwoWay}">
                                                                    <ListBox ItemsSource="{Binding AvailableDrivers}"
                                                                             SelectedItem="{Binding SelectedDriver}"
                                                                             MinWidth="180"
                                                                             MaxHeight="250"
                                                                             Background="White"
                                                                             Padding="4"
                                                                             SelectionChanged="OnDriverSelectionChanged">
                                                                        <ListBox.ItemTemplate>
                                                                            <DataTemplate x:DataType="vm:DriverViewModel">
                                                                                <Grid ColumnDefinitions="Auto,*" Margin="2">
                                                                                    <Border Grid.Column="0"
                                                                                            Width="32" Height="32"
                                                                                            CornerRadius="16"
                                                                                            Background="#F0F0F0"
                                                                                            Margin="0,0,8,0">
                                                                                        <Border.Clip>
                                                                                            <EllipseGeometry Center="16,16" RadiusX="16" RadiusY="16" />
                                                                                        </Border.Clip>
                                                                                        <Image Source="{Binding ImagePath, Converter={x:Static converters:ImagePathToBitmapConverter.Instance}}"
                                                                                               Stretch="UniformToFill" />
                                                                                    </Border>
                                                                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                                                        <TextBlock Text="{Binding Name}"
                                                                                                   FontSize="12"
                                                                                                   FontWeight="SemiBold" />
                                                                                        <TextBlock Text="{Binding PowerPercentageDisplay}"
                                                                                                   FontSize="10"
                                                                                                   Foreground="#666666" />
                                                                                    </StackPanel>
                                                                                </Grid>
                                                                            </DataTemplate>
                                                                        </ListBox.ItemTemplate>
                                                                    </ListBox>
                                                                </Flyout>
                                                            </Button.Flyout>
                                                        </Button>

                                                        <!-- Max Throttle section -->
                                                        <Border Grid.Column="3"
                                                                Padding="8,6">
                                                            <StackPanel VerticalAlignment="Center">
                                                                <TextBlock Text="Max Throttle"
                                                                           FontSize="10"
                                                                           Foreground="#888888"
                                                                           Margin="0,0,0,2" />
                                                                <TextBlock Text="{Binding MaxThrottle}"
                                                                           FontSize="16"
                                                                           FontWeight="Bold" />
                                                            </StackPanel>
                                                        </Border>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Grid>
                        </Border>

                        <!-- Separator -->
                        <Border Grid.Column="1" Width="20" />

                        <!-- Right Panel: Race Settings -->
                        <Border Grid.Column="2"
                                Background="White"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="15"
                                MinWidth="280"
                                MaxWidth="350">
                            <Grid RowDefinitions="Auto,*">
                                <TextBlock Grid.Row="0"
                                           Text="Race Settings"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,15" />
                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                    <StackPanel>

                                <!-- Free Practice -->
                                <Border Background="#FAFAFA"
                                        CornerRadius="4"
                                        Padding="12"
                                        Margin="0,0,0,10">
                                    <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,Auto">
                                        <CheckBox Grid.Row="0" Grid.Column="0"
                                                  Content="Free Practice"
                                                  IsChecked="{Binding ConfigFreePracticeEnabled}"
                                                  FontSize="12"
                                                  FontWeight="SemiBold" />
                                        <TextBlock Grid.Row="0" Grid.Column="1"
                                                   Text="{Binding ConfigFreePracticeDisplay}"
                                                   FontSize="12"
                                                   Foreground="Gray"
                                                   VerticalAlignment="Center" />

                                        <StackPanel Grid.Row="1" Grid.ColumnSpan="2"
                                                    Orientation="Horizontal"
                                                    Spacing="8"
                                                    Margin="24,6,0,0"
                                                    IsVisible="{Binding ConfigFreePracticeEnabled}">
                                            <RadioButton Content="Laps"
                                                         FontSize="11"
                                                         IsChecked="{Binding ConfigFreePracticeMode, Converter={x:Static vm:RaceStageModeConverter.ToLaps}}"
                                                         GroupName="FPMode" />
                                            <RadioButton Content="Time"
                                                         FontSize="11"
                                                         IsChecked="{Binding ConfigFreePracticeMode, Converter={x:Static vm:RaceStageModeConverter.ToTime}}"
                                                         GroupName="FPMode" />
                                            <NumericUpDown Value="{Binding ConfigFreePracticeLapCount}"
                                                           Minimum="1"
                                                           Maximum="999"
                                                           Width="70"
                                                           FontSize="12"
                                                           IsVisible="{Binding ConfigFreePracticeMode, Converter={x:Static vm:RaceStageModeConverter.IsLaps}}" />
                                            <NumericUpDown Value="{Binding ConfigFreePracticeTimeMinutes}"
                                                           Minimum="1"
                                                           Maximum="999"
                                                           Width="70"
                                                           FontSize="12"
                                                           IsVisible="{Binding ConfigFreePracticeMode, Converter={x:Static vm:RaceStageModeConverter.IsTime}}" />
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <!-- Qualifying -->
                                <Border Background="#FAFAFA"
                                        CornerRadius="4"
                                        Padding="12"
                                        Margin="0,0,0,10">
                                    <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,Auto">
                                        <CheckBox Grid.Row="0" Grid.Column="0"
                                                  Content="Qualifying"
                                                  IsChecked="{Binding ConfigQualifyingEnabled}"
                                                  FontSize="12"
                                                  FontWeight="SemiBold" />
                                        <TextBlock Grid.Row="0" Grid.Column="1"
                                                   Text="{Binding ConfigQualifyingDisplay}"
                                                   FontSize="12"
                                                   Foreground="Gray"
                                                   VerticalAlignment="Center" />

                                        <StackPanel Grid.Row="1" Grid.ColumnSpan="2"
                                                    Orientation="Horizontal"
                                                    Spacing="8"
                                                    Margin="24,6,0,0"
                                                    IsVisible="{Binding ConfigQualifyingEnabled}">
                                            <RadioButton Content="Laps"
                                                         FontSize="11"
                                                         IsChecked="{Binding ConfigQualifyingMode, Converter={x:Static vm:RaceStageModeConverter.ToLaps}}"
                                                         GroupName="QMode" />
                                            <RadioButton Content="Time"
                                                         FontSize="11"
                                                         IsChecked="{Binding ConfigQualifyingMode, Converter={x:Static vm:RaceStageModeConverter.ToTime}}"
                                                         GroupName="QMode" />
                                            <NumericUpDown Value="{Binding ConfigQualifyingLapCount}"
                                                           Minimum="1"
                                                           Maximum="999"
                                                           Width="70"
                                                           FontSize="12"
                                                           IsVisible="{Binding ConfigQualifyingMode, Converter={x:Static vm:RaceStageModeConverter.IsLaps}}" />
                                            <NumericUpDown Value="{Binding ConfigQualifyingTimeMinutes}"
                                                           Minimum="1"
                                                           Maximum="999"
                                                           Width="70"
                                                           FontSize="12"
                                                           IsVisible="{Binding ConfigQualifyingMode, Converter={x:Static vm:RaceStageModeConverter.IsTime}}" />
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <!-- Race -->
                                <Border Background="#FAFAFA"
                                        CornerRadius="4"
                                        Padding="12">
                                    <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,Auto">
                                        <CheckBox Grid.Row="0" Grid.Column="0"
                                                  Content="Race"
                                                  IsChecked="{Binding ConfigRaceEnabled}"
                                                  FontSize="12"
                                                  FontWeight="SemiBold" />
                                        <TextBlock Grid.Row="0" Grid.Column="1"
                                                   Text="{Binding ConfigRaceDisplay}"
                                                   FontSize="12"
                                                   Foreground="Gray"
                                                   VerticalAlignment="Center" />

                                        <StackPanel Grid.Row="1" Grid.ColumnSpan="2"
                                                    Orientation="Horizontal"
                                                    Spacing="8"
                                                    Margin="24,6,0,0"
                                                    IsVisible="{Binding ConfigRaceEnabled}">
                                            <RadioButton Content="Laps"
                                                         FontSize="11"
                                                         IsChecked="{Binding ConfigRaceMode, Converter={x:Static vm:RaceStageModeConverter.ToLaps}}"
                                                         GroupName="RMode" />
                                            <RadioButton Content="Time"
                                                         FontSize="11"
                                                         IsChecked="{Binding ConfigRaceMode, Converter={x:Static vm:RaceStageModeConverter.ToTime}}"
                                                         GroupName="RMode" />
                                            <NumericUpDown Value="{Binding ConfigRaceLapCount}"
                                                           Minimum="1"
                                                           Maximum="999"
                                                           Width="70"
                                                           FontSize="12"
                                                           IsVisible="{Binding ConfigRaceMode, Converter={x:Static vm:RaceStageModeConverter.IsLaps}}" />
                                            <NumericUpDown Value="{Binding ConfigRaceTimeMinutes}"
                                                           Minimum="1"
                                                           Maximum="999"
                                                           Width="70"
                                                           FontSize="12"
                                                           IsVisible="{Binding ConfigRaceMode, Converter={x:Static vm:RaceStageModeConverter.IsTime}}" />
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <!-- Default Power -->
                                <Border Background="#FAFAFA"
                                        CornerRadius="4"
                                        Padding="12"
                                        Margin="0,10,0,0">
                                    <StackPanel Spacing="6">
                                        <TextBlock Text="Default Power"
                                                   FontSize="12"
                                                   FontWeight="SemiBold" />
                                        <TextBlock Text="Used when no car/driver selected"
                                                   FontSize="10"
                                                   Foreground="Gray" />
                                        <Grid ColumnDefinitions="*,Auto" Margin="0,4,0,0">
                                            <Slider Grid.Column="0"
                                                    Minimum="0"
                                                    Maximum="63"
                                                    Value="{Binding ConfigDefaultPower}"
                                                    VerticalAlignment="Center" />
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding ConfigDefaultPower}"
                                                       FontSize="14"
                                                       FontWeight="SemiBold"
                                                       VerticalAlignment="Center"
                                                       Width="25"
                                                       TextAlignment="Center"
                                                       Margin="8,0,0,0" />
                                        </Grid>
                                    </StackPanel>
                                </Border>
                                    </StackPanel>
                                </ScrollViewer>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- Footer Buttons -->
                    <Grid Grid.Row="2" ColumnDefinitions="*,Auto,Auto,Auto" Margin="0,20,0,0">
                        <TextBlock Grid.Column="0"
                                   Text="Press ESC to go back"
                                   FontSize="12"
                                   Foreground="Gray"
                                   VerticalAlignment="Center" />
                        <Button Grid.Column="1"
                                Content="Back"
                                Command="{Binding ExitConfigureCommand}"
                                Padding="20,10"
                                Margin="0,0,10,0" />
                        <Button Grid.Column="2"
                                Content="{Binding TestButtonText}"
                                Command="{Binding ToggleTestModeCommand}"
                                IsEnabled="{Binding IsConnected}"
                                Padding="20,10"
                                Margin="0,0,10,0"
                                Background="{Binding IsTestModeActive, Converter={x:Static converters:BoolToTestButtonColorConverter.Instance}}" />
                        <Button Grid.Column="3"
                                Content="Start Race"
                                Command="{Binding ProceedToRacingCommand}"
                                IsEnabled="{Binding CanStartRace}"
                                Padding="20,10"
                                FontWeight="SemiBold" />
                    </Grid>
                </Grid>
            </Border>

            <!-- Racing Mode Content -->
            <Border Background="#1a1a2e"
                    CornerRadius="8"
                    Padding="30"
                    IsVisible="{Binding IsRacingMode}">
                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Racing Header -->
                    <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,30">
                        <TextBlock Text="Racing"
                                   FontSize="36"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center" />
                        <TextBlock Text="{Binding ActiveRace.Name}"
                                   FontSize="18"
                                   Foreground="#888888"
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0" />
                    </StackPanel>

                    <!-- Racing Content (placeholder for now) -->
                    <StackPanel Grid.Row="1"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                        <TextBlock Text="Racing functionality coming soon..."
                                   FontSize="16"
                                   Foreground="#666666"
                                   HorizontalAlignment="Center" />
                        <TextBlock Text="{Binding ActiveRace.StagesSummary}"
                                   FontSize="14"
                                   Foreground="#555555"
                                   HorizontalAlignment="Center"
                                   Margin="0,10,0,0" />
                    </StackPanel>

                    <!-- Exit Instructions -->
                    <StackPanel Grid.Row="2" HorizontalAlignment="Center" Spacing="10">
                        <TextBlock Text="Press ESC to exit"
                                   FontSize="12"
                                   Foreground="#555555"
                                   HorizontalAlignment="Center" />
                        <Button Content="Exit Racing"
                                Command="{Binding ExitRacingCommand}"
                                Padding="20,10"
                                FontSize="14" />
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Footer: Status Bar with Connection Indicator (hidden in Racing mode) -->
        <Grid Grid.Row="2" ColumnDefinitions="Auto,*,Auto" Margin="0,10,0,0"
              IsVisible="{Binding IsSetupMode}">
            <!-- Connection Status Indicator -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                <Ellipse Width="12" Height="12"
                         Fill="{Binding CurrentConnectionState, Converter={x:Static converters:ConnectionStateToColorConverter.Instance}}" />
                <TextBlock Text="{Binding ConnectionStatusText}"
                           FontSize="11"
                           Foreground="Gray"
                           VerticalAlignment="Center" />
            </StackPanel>

            <!-- Status Message -->
            <TextBlock Grid.Column="1"
                       Text="{Binding StatusMessage}"
                       FontSize="11"
                       Foreground="Gray"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />

            <!-- Version -->
            <TextBlock Grid.Column="2"
                       Text="{Binding Version, StringFormat='v{0}'}"
                       FontSize="11"
                       Foreground="Gray"
                       VerticalAlignment="Center" />
        </Grid>
    </Grid>
</Window>
