<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ScalextricRace.ViewModels"
        xmlns:models="using:ScalextricRace.Models"
        xmlns:converters="using:ScalextricRace.Converters"
        x:Class="ScalextricRace.Views.MainWindow"
        x:DataType="vm:MainViewModel"
        Title="{Binding Title}"
        Width="800" Height="600"
        MinWidth="600" MinHeight="400">

    <Grid RowDefinitions="Auto,*,Auto" Margin="20">

        <!-- Header: Hamburger Menu, Title, and Settings -->
        <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto" Margin="0,0,0,20">

            <!-- Hamburger Menu Button -->
            <Button Grid.Column="0"
                    Command="{Binding ToggleMenuCommand}"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="8"
                    Margin="0,0,15,0"
                    ToolTip.Tip="Menu">
                <TextBlock Text="&#x2630;"
                           FontSize="24"
                           VerticalAlignment="Center" />
            </Button>

            <!-- Title (shows current mode) -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10">
                <TextBlock Text="{Binding Title}"
                           FontSize="28"
                           FontWeight="Bold" />
                <TextBlock Text="-"
                           FontSize="28"
                           Foreground="Gray"
                           IsVisible="{Binding !IsRaceMode}" />
                <TextBlock Text="Cars"
                           FontSize="28"
                           Foreground="Gray"
                           IsVisible="{Binding IsCarsMode}" />
                <TextBlock Text="Drivers"
                           FontSize="28"
                           Foreground="Gray"
                           IsVisible="{Binding IsDriversMode}" />
                <TextBlock Text="Settings"
                           FontSize="28"
                           Foreground="Gray"
                           IsVisible="{Binding IsSettingsMode}" />
            </StackPanel>

            <!-- Settings Button with Flyout (Power Settings) -->
            <Button Grid.Column="2"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="8"
                    ToolTip.Tip="Power Settings">
                <Button.Flyout>
                    <Flyout Placement="BottomEdgeAlignedRight">
                        <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                                Padding="20"
                                MinWidth="320">
                            <StackPanel Spacing="15">
                                <!-- Flyout Header -->
                                <TextBlock Text="Power Settings"
                                           FontSize="18"
                                           FontWeight="SemiBold" />

                                <!-- Power Toggle Button -->
                                <Button Content="{Binding PowerButtonText}"
                                        Command="{Binding TogglePowerCommand}"
                                        IsEnabled="{Binding IsConnected}"
                                        HorizontalAlignment="Stretch"
                                        Height="45"
                                        FontSize="14"
                                        FontWeight="Bold" />

                                <!-- Power Level (only in global mode) -->
                                <StackPanel Spacing="5" IsVisible="{Binding !IsPerSlotPowerMode}">
                                    <Grid ColumnDefinitions="*,Auto">
                                        <TextBlock Grid.Column="0"
                                                   Text="Power Level"
                                                   FontSize="12"
                                                   Foreground="Gray" />
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding PowerLevel}"
                                                   FontSize="14"
                                                   FontWeight="Bold" />
                                    </Grid>
                                    <Slider Minimum="0"
                                            Maximum="63"
                                            Value="{Binding PowerLevel}" />
                                </StackPanel>

                                <!-- Throttle Profile (only in global mode) -->
                                <StackPanel Spacing="5" IsVisible="{Binding !IsPerSlotPowerMode}">
                                    <TextBlock Text="Throttle Profile"
                                               FontSize="12"
                                               Foreground="Gray" />
                                    <ComboBox ItemsSource="{Binding AvailableThrottleProfiles}"
                                              SelectedItem="{Binding SelectedThrottleProfile}"
                                              HorizontalAlignment="Stretch" />
                                </StackPanel>

                                <!-- Per-Slot Controls (only in per-slot mode) -->
                                <ScrollViewer IsVisible="{Binding IsPerSlotPowerMode}"
                                              MaxHeight="400"
                                              VerticalScrollBarVisibility="Auto">
                                    <ItemsControl ItemsSource="{Binding Controllers}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="vm:ControllerViewModel">
                                                <Border Background="#F5F5F5"
                                                        CornerRadius="6"
                                                        Padding="12"
                                                        Margin="0,0,0,8">
                                                    <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                                                        <!-- Slot Header -->
                                                        <TextBlock Grid.Row="0" Grid.Column="0"
                                                                   Text="{Binding SlotLabel}"
                                                                   FontSize="13"
                                                                   FontWeight="SemiBold" />
                                                        <TextBlock Grid.Row="0" Grid.Column="1"
                                                                   Text="{Binding PowerLevel}"
                                                                   FontSize="13"
                                                                   FontWeight="Bold" />

                                                        <!-- Power Slider -->
                                                        <Slider Grid.Row="1" Grid.ColumnSpan="2"
                                                                Minimum="0"
                                                                Maximum="63"
                                                                Value="{Binding PowerLevel}"
                                                                Margin="0,5,0,5" />

                                                        <!-- Throttle Profile -->
                                                        <TextBlock Grid.Row="2" Grid.Column="0"
                                                                   Text="Profile"
                                                                   FontSize="11"
                                                                   Foreground="Gray"
                                                                   VerticalAlignment="Center" />
                                                        <ComboBox Grid.Row="2" Grid.Column="1"
                                                                  ItemsSource="{x:Static vm:ControllerViewModel.AvailableProfiles}"
                                                                  SelectedItem="{Binding ThrottleProfile}"
                                                                  FontSize="11"
                                                                  MinWidth="100" />
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>

                                <Separator Margin="0,5" />

                                <!-- Per-Slot Mode Toggle -->
                                <Button Content="{Binding PerSlotToggleText}"
                                        Command="{Binding TogglePerSlotPowerModeCommand}"
                                        HorizontalAlignment="Stretch"
                                        Height="35"
                                        FontSize="12" />
                            </StackPanel>
                        </Border>
                    </Flyout>
                </Button.Flyout>

                <!-- Gear Icon (using Unicode) -->
                <TextBlock Text="&#x2699;"
                           FontSize="24"
                           VerticalAlignment="Center" />
            </Button>
        </Grid>

        <!-- Hamburger Menu Overlay -->
        <Border Grid.Row="1"
                Background="#80000000"
                IsVisible="{Binding IsMenuOpen}"
                ZIndex="100">
            <Border Background="White"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Stretch"
                    Width="250"
                    CornerRadius="0,8,8,0"
                    Padding="0">
                <StackPanel>
                    <!-- Menu Header -->
                    <Border Background="#F0F0F0" Padding="20,15">
                        <TextBlock Text="Menu"
                                   FontSize="18"
                                   FontWeight="SemiBold" />
                    </Border>

                    <!-- Menu Items -->
                    <Button Content="Race"
                            Command="{Binding NavigateToCommand}"
                            CommandParameter="{x:Static models:NavigationMode.Race}"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="20,15"
                            FontSize="16" />

                    <Button Content="Cars"
                            Command="{Binding NavigateToCommand}"
                            CommandParameter="{x:Static models:NavigationMode.Cars}"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="20,15"
                            FontSize="16" />

                    <Button Content="Drivers"
                            Command="{Binding NavigateToCommand}"
                            CommandParameter="{x:Static models:NavigationMode.Drivers}"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="20,15"
                            FontSize="16" />

                    <Separator Margin="10,5" />

                    <Button Content="Settings"
                            Command="{Binding NavigateToCommand}"
                            CommandParameter="{x:Static models:NavigationMode.Settings}"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="20,15"
                            FontSize="16" />
                </StackPanel>
            </Border>
        </Border>

        <!-- Click-away overlay to close menu -->
        <Border Grid.Row="1"
                Background="Transparent"
                IsVisible="{Binding IsMenuOpen}"
                ZIndex="99"
                PointerPressed="OnMenuOverlayPressed" />

        <!-- Main Content Area -->
        <Grid Grid.Row="1">

            <!-- Race Mode Content -->
            <Border Background="#FAFAFA"
                    CornerRadius="8"
                    Padding="20"
                    IsVisible="{Binding IsRaceMode}">
                <StackPanel VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                    <TextBlock Text="Race Status"
                               FontSize="20"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10" />
                    <TextBlock Text="Connect to a Scalextric powerbase to begin"
                               FontSize="14"
                               Foreground="Gray"
                               HorizontalAlignment="Center" />
                </StackPanel>
            </Border>

            <!-- Cars Mode Content -->
            <Border Background="#FAFAFA"
                    CornerRadius="8"
                    Padding="20"
                    IsVisible="{Binding IsCarsMode}">
                <Grid RowDefinitions="Auto,*">
                    <!-- Cars Header with Add Button -->
                    <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,15">
                        <TextBlock Text="My Cars"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center" />
                        <Button Grid.Column="1"
                                Content="+ Add Car"
                                Command="{Binding AddCarCommand}"
                                Padding="15,8"
                                FontSize="13" />
                    </Grid>

                    <!-- Cars Grid -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="CarsItemsControl" ItemsSource="{Binding Cars}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="vm:CarViewModel">
                                    <Border Background="White"
                                            BorderBrush="#E0E0E0"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            Width="220"
                                            Margin="0,0,15,15"
                                            Padding="15">
                                        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto">
                                            <!-- Car Image (clickable to change) -->
                                            <Button Grid.Row="0"
                                                    Command="{Binding RequestImageChangeCommand}"
                                                    Background="Transparent"
                                                    Padding="0"
                                                    Margin="0,0,0,10"
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Stretch"
                                                    Cursor="Hand">
                                                <Border Background="#F5F5F5"
                                                        CornerRadius="6"
                                                        Height="100"
                                                        ClipToBounds="True">
                                                    <!-- Placeholder icon (shown when no image) -->
                                                    <Panel>
                                                        <TextBlock Text="&#x1F3CE;"
                                                                   FontSize="48"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"
                                                                   Foreground="#CCCCCC"
                                                                   IsVisible="{Binding !HasImage}" />
                                                        <!-- Actual image (shown when image is set) -->
                                                        <Image Source="{Binding ImageBitmap}"
                                                               Stretch="Uniform"
                                                               IsVisible="{Binding HasImage}" />
                                                    </Panel>
                                                </Border>
                                            </Button>

                                            <!-- Car Name -->
                                            <TextBox Grid.Row="1"
                                                     Text="{Binding Name}"
                                                     FontSize="16"
                                                     FontWeight="SemiBold"
                                                     Margin="0,0,0,10"
                                                     BorderThickness="0"
                                                     Background="Transparent"
                                                     Padding="0" />

                                            <!-- Default Power (read-only, set via tuning) -->
                                            <Grid Grid.Row="2" ColumnDefinitions="*,Auto" Margin="0,0,0,8">
                                                <TextBlock Text="Default Power"
                                                           FontSize="11"
                                                           Foreground="Gray" />
                                                <TextBlock Grid.Column="1"
                                                           Text="{Binding DefaultPower}"
                                                           FontSize="11"
                                                           FontWeight="SemiBold" />
                                            </Grid>

                                            <!-- Ghost Max / Min Power (read-only, needs tuning) -->
                                            <Grid Grid.Row="3" ColumnDefinitions="*,Auto,Auto,Auto" Margin="0,0,0,5">
                                                <TextBlock Text="Ghost Max / Min"
                                                           FontSize="11"
                                                           Foreground="Gray" />
                                                <TextBlock Grid.Column="1"
                                                           Text="{Binding GhostMaxPower}"
                                                           FontSize="11"
                                                           FontWeight="SemiBold" />
                                                <TextBlock Grid.Column="2"
                                                           Text=" / "
                                                           FontSize="11"
                                                           Foreground="Gray" />
                                                <TextBlock Grid.Column="3"
                                                           Text="{Binding MinPower}"
                                                           FontSize="11"
                                                           FontWeight="SemiBold" />
                                            </Grid>

                                            <!-- Action Buttons -->
                                            <StackPanel Grid.Row="4"
                                                        Orientation="Horizontal"
                                                        HorizontalAlignment="Right"
                                                        Spacing="8"
                                                        Margin="0,10,0,0">
                                                <Button Content="Tune"
                                                        Command="{Binding RequestTuneCommand}"
                                                        Padding="10,5"
                                                        FontSize="11" />
                                                <Button Content="Delete"
                                                        Command="{Binding RequestDeleteCommand}"
                                                        IsVisible="{Binding CanDelete}"
                                                        Padding="10,5"
                                                        FontSize="11" />
                                            </StackPanel>

                                            <!-- Default Car Badge -->
                                            <Border Grid.Row="4"
                                                    Background="#E3F2FD"
                                                    CornerRadius="4"
                                                    Padding="8,4"
                                                    HorizontalAlignment="Left"
                                                    IsVisible="{Binding IsDefault}"
                                                    Margin="0,10,0,0">
                                                <TextBlock Text="Default"
                                                           FontSize="10"
                                                           Foreground="#1976D2" />
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Drivers Mode Content -->
            <Border Background="#FAFAFA"
                    CornerRadius="8"
                    Padding="20"
                    IsVisible="{Binding IsDriversMode}">
                <Grid RowDefinitions="Auto,*">
                    <!-- Drivers Header with Add Button -->
                    <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,15">
                        <TextBlock Text="My Drivers"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center" />
                        <Button Grid.Column="1"
                                Content="+ Add Driver"
                                Command="{Binding AddDriverCommand}"
                                Padding="15,8"
                                FontSize="13" />
                    </Grid>

                    <!-- Drivers Grid -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Drivers}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="vm:DriverViewModel">
                                    <Border Background="White"
                                            BorderBrush="#E0E0E0"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            Width="220"
                                            Margin="0,0,15,15"
                                            Padding="15">
                                        <Grid RowDefinitions="Auto,Auto,Auto,Auto">
                                            <!-- Driver Image/Avatar (clickable to change) -->
                                            <Button Grid.Row="0"
                                                    Command="{Binding RequestImageChangeCommand}"
                                                    Background="Transparent"
                                                    Padding="0"
                                                    Margin="0,0,0,10"
                                                    HorizontalAlignment="Center"
                                                    Cursor="Hand">
                                                <Border Background="#F5F5F5"
                                                        CornerRadius="50"
                                                        Width="100"
                                                        Height="100"
                                                        ClipToBounds="True">
                                                    <Panel>
                                                        <!-- Placeholder icon (shown when no image) -->
                                                        <TextBlock Text="&#x1F464;"
                                                                   FontSize="48"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"
                                                                   Foreground="#CCCCCC"
                                                                   IsVisible="{Binding !HasImage}" />
                                                        <!-- Actual image (shown when image is set) -->
                                                        <Image Source="{Binding ImageBitmap}"
                                                               Stretch="UniformToFill"
                                                               IsVisible="{Binding HasImage}" />
                                                    </Panel>
                                                </Border>
                                            </Button>

                                            <!-- Driver Name -->
                                            <TextBox Grid.Row="1"
                                                     Text="{Binding Name}"
                                                     FontSize="16"
                                                     FontWeight="SemiBold"
                                                     Margin="0,0,0,10"
                                                     BorderThickness="0"
                                                     Background="Transparent"
                                                     Padding="0"
                                                     HorizontalAlignment="Center" />

                                            <!-- Power Limit -->
                                            <Grid Grid.Row="2" ColumnDefinitions="*,Auto" Margin="0,0,0,8">
                                                <TextBlock Text="Power Limit"
                                                           FontSize="11"
                                                           Foreground="Gray"
                                                           VerticalAlignment="Center" />
                                                <TextBlock Grid.Column="1"
                                                           Text="{Binding PowerLimitDisplay}"
                                                           FontSize="11"
                                                           FontWeight="SemiBold"
                                                           Foreground="{Binding HasPowerLimit, Converter={x:Static converters:BoolToColorConverter.Instance}}"
                                                           VerticalAlignment="Center" />
                                            </Grid>

                                            <!-- Skill Level Buttons -->
                                            <ItemsControl Grid.Row="3" ItemsSource="{Binding AvailableSkillLevels}" Margin="0,10,0,0">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <WrapPanel Orientation="Horizontal" />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate x:DataType="models:SkillLevel">
                                                        <Button Content="{Binding Name}"
                                                                Command="{Binding $parent[Border].DataContext.SetSkillLevelCommand}"
                                                                CommandParameter="{Binding}"
                                                                Padding="6,4"
                                                                FontSize="9"
                                                                Margin="0,0,4,4"
                                                                ToolTip.Tip="{Binding PowerLimit, StringFormat='Power limit: {0}'}" />
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>

                                            <!-- Delete Button (separate row) -->
                                            <Button Grid.Row="3"
                                                    Content="Delete"
                                                    Command="{Binding RequestDeleteCommand}"
                                                    IsVisible="{Binding CanDelete}"
                                                    Padding="6,4"
                                                    FontSize="9"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Bottom"
                                                    Margin="0,10,0,0" />

                                            <!-- Default Driver Badge -->
                                            <Border Grid.Row="3"
                                                    Background="#E3F2FD"
                                                    CornerRadius="4"
                                                    Padding="8,4"
                                                    HorizontalAlignment="Left"
                                                    IsVisible="{Binding IsDefault}"
                                                    Margin="0,10,0,0">
                                                <TextBlock Text="Default"
                                                           FontSize="10"
                                                           Foreground="#1976D2" />
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Settings Mode Content (placeholder) -->
            <Border Background="#FAFAFA"
                    CornerRadius="8"
                    Padding="20"
                    IsVisible="{Binding IsSettingsMode}">
                <StackPanel VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                    <TextBlock Text="Settings"
                               FontSize="20"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10" />
                    <TextBlock Text="Application settings coming soon..."
                               FontSize="14"
                               Foreground="Gray"
                               HorizontalAlignment="Center" />
                </StackPanel>
            </Border>
        </Grid>

        <!-- Footer: Status Bar with Connection Indicator -->
        <Grid Grid.Row="2" ColumnDefinitions="Auto,*,Auto" Margin="0,10,0,0">
            <!-- Connection Status Indicator -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                <Ellipse Width="12" Height="12"
                         Fill="{Binding CurrentConnectionState, Converter={x:Static converters:ConnectionStateToColorConverter.Instance}}" />
                <TextBlock Text="{Binding ConnectionStatusText}"
                           FontSize="11"
                           Foreground="Gray"
                           VerticalAlignment="Center" />
            </StackPanel>

            <!-- Status Message -->
            <TextBlock Grid.Column="1"
                       Text="{Binding StatusMessage}"
                       FontSize="11"
                       Foreground="Gray"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />

            <!-- Version -->
            <TextBlock Grid.Column="2"
                       Text="{Binding Version, StringFormat='v{0}'}"
                       FontSize="11"
                       Foreground="Gray"
                       VerticalAlignment="Center" />
        </Grid>
    </Grid>
</Window>
